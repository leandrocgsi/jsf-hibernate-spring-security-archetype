#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="session">
        
        <!-- CONFIGURAÇÕES DE CONEXÃO COM O BD -->
        
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property><!-- Defino o driver de conexão com o bd -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/${artifactId}_db?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        
        <!-- HABILITA A EXIBIÇÃO DO SQL GERADO PELO HIBERNATE E FORMATA-O -->
        
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        
        <!-- HABILITA A ATUALIZAÇÃO AUTOMÁTICA DA ESTRUTURA DE TABELAS PELO HIBERNATE -->
        
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- CONFIGURAÇÕES DO POOL DE CONEXÕES-->
        
        <property name="c3p0.min_size">1</property>
        <property name="c3p0.max_size">20</property>
        <property name="c3p0.timeout">300</property>
        <property name="c3p0.max_statements">80</property>
        <property name="c3p0.idle_test_period">300</property>
        
        <!-- LISTA DE ENTIDADES -->
        <mapping class="${package}.model.entities.Cidade"/>        
        <mapping class="${package}.model.entities.Endereco"/>      
        <mapping class="${package}.model.entities.Estado"/>      
        <mapping class="${package}.model.entities.Pessoa"/>               
        <mapping class="${package}.model.entities.Sexo"/>
        <mapping class="${package}.model.entities.TipoEndereco"/>
        <mapping class="${package}.model.entities.TipoLogradouro"/>
    </session-factory>
</hibernate-configuration>